# Copy this file to .env and update with your own values
ADMIN_PASSWORD=your_password_here

# Session secret key for persistent sessions
# Generate a secure key with: python -c "import secrets; print(secrets.token_hex(24))"
SESSION_SECRET_KEY=your_secret_key_here

# Database settings - Use one of the following:
# For development, use the local database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/dme

# For production, set up appropriate production connection string
# DATABASE_URL=postgresql://username:password@hostname/database

# Subscription settings (optional)
# SUPPORT_EMAIL=support@decisionme.ai
# SUBSCRIPTION_URL=/subscribe

# Magic Link Configuration
# Shared secret key for HMAC signing (must be same in both admin and client apps)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
MAGIC_LINK_SECRET=your-shared-secret-key-here

# Client application URL where users will be redirected after authentication
# For development: http://localhost:8000
# For production: https://app.decisionme.com
CLIENT_APP_URL=https://app.decisionme.com